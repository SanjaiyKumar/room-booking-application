<% if user_signed_in? %>
    <% if !@hotels.empty? %>
        <div class="row m-4">
            <% @hotels.each do |hotel| %>
                <div class="card col-sm-5 m-3" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"> <i class="fas fa-hotel"></i> <%= hotel.name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><i class="fas fa-map-marker-alt"></i> <%= hotel.address.location %></h6>
                        <p class="card-text"><i class="fas fa-phone"></i> <%= hotel.phoneno %> | <i class="fas fa-envelope"></i> <%= hotel.email %></p>
                        <%= link_to "Book Now" , user_hotel_roomlist_path(hotel) ,class:"card-link btn btn-success" %>
                        <%= link_to "View Details" , user_hotel_show_path(hotel), class:" card-link btn btn-primary"%>
                    </div>
                </div>
            <% end %>
        </div>
        <% else %>
        <h3>No hotel found at this location .</h3>
    <% end %>
    <%= link_to 'Back', search_hotel_path ,class:"btn btn-dark" %>
<% else %>
  <h1>Room Booking Application</h1>
<% end %>