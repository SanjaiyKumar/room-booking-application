<div class="card">
  <div class="card-header">
    <h2>Sign up</h2>
  </div>
  <div class="card-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "hotels/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :phoneno %><br />
      <%= f.text_field :phoneno, autofocus: true, autocomplete: "phoneno",class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :room_count %><br />
      <%= f.number_field :room_count, autofocus: true, autocomplete: "room_count",class:"form-control" %>
    </div>

    <%
=begin%>
 <div class="field form-group">
      <%= f.label :address %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address",class:"form-control" %>
    </div> 
<%
=end%>

    <div class="field form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control"%>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" ,class:"btn btn-primary"%>
    </div>
  <% end %>
<br>
<%= render "hotels/shared/links" %>

  </div>
</div>